@model Models.Driver

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Добавление водителя</title>
</head>
<body>

<h4>Водитель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Фамилия</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Otchestvo" class="control-label">Отчество</label>
                <input asp-for="Otchestvo" class="form-control" />
                <span asp-validation-for="Otchestvo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Номер телефона</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Адрес</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Категория прав</label>
                @Html.DropDownListFor(d => d.DriverCategory, Enum.GetNames<DriverCategory>().Select(x =>
               {
                   return new SelectListItem(x, x);
               }))
                <span asp-validation-for="DriverCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Логин</label>
                @Html.TextBoxFor(d => d.User.Login)
            </div>
            <div class="form-group">
                <label  class="control-label">Пароль</label>
                @Html.PasswordFor(d => d.User.Password)
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
