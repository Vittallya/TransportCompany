@model Models.Driver

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Дополнительно</h1>

<div>
    <h4>Водитель</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Фамилия")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Имя")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Отчество")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(m => m.Otchestvo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Номер телефона")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Адрес")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Категория прав")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Водитель свободен")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDriverFree ? "Да" : "Нет")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="@Html.ViewBag.Action" asp-controller="@Html.ViewBag.BackController">Назад</a>
</div>
